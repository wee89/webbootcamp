<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center">Edit Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" style="margin: 20px;">
            <button class="btn btn-lg btn-info btn-block" style="margin: 20px;">Submit!</button>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
